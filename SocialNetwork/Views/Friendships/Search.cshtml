@model List<SocialNetwork.ViewModels.UsersListItemViewModel>

@section Styles {
	<script type="text/javascript" src="~/js/search.js"></script>
}

@{
	ViewData["Title"] = "Search";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search</h2>
<form id="search-form" class="form-inline">
	<div class="form-group">
		<label for="name-input">Name</label>
		<input type="text" class="form-control" id="name-input" placeholder="Type in name..">
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-default glyphicon-search"></button>
	</div>
</form>

<section class="search-results">
	<table class="table">
		@for (int i = 0; i < Model.Count; i++)
		{ 
			<tr>
				<td>
					@Model[i].Name
				</td>
				<td>
					@Model[i].Country
				</td>
				<td>
					<a class="btn btn-default" asp-controller="UserProfile" asp-action="UserProfile" asp-route-id="@Model[i].ID">
						View Profile
					</a>
				</td>
			</tr>
		}		
	</table>
</section>


